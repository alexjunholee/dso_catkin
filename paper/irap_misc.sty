% label formating
%=====================================================
% \equref
\providecommand{\equref}[1]{(\ref{#1})}
% \figref
\providecommand{\figref}[1]{Fig.~\ref{#1}}
% \tabref
\providecommand{\tabref}[1]{Table.~\ref{#1}}
% \algoref
\providecommand{\algoref}[1]{Algorithm.~\ref{#1}}
% \secref
\providecommand{\secref}[1]{\textsection\ref{#1}}
% \chapref
\providecommand{\chapref}[1]{Chap.~\ref{#1}}

% symbol footnote: syntax \symbolfootnote[1]{text}
% 1 - *
% 2 - dagger
% 3 - double dagger
% 4 - ...9 see page 175 of latex manual
\long\def\symbolfootnote[#1]#2{\begingroup%
\def\thefootnote{\fnsymbol{footnote}}\footnote[#1]{#2}\endgroup}


